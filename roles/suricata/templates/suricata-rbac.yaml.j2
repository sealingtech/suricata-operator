apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ meta.name }}-suricata-sa
  namespace: {{ meta.namespace }}
  labels: 
    app: {{ meta.name }}-suricata-updater
    
---

apiVersion: rbac.authorization.k8s.io/v1beta1
kind: Role
metadata:
  name: {{ meta.name }}-suricata-role
  namespace: {{ meta.namespace }}
  labels:
    app: {{ meta.name }}-suricata-updater
rules:
- apiGroups:
    - ""
  resources:
    - pods
    - pods/log
  verbs:
    - get
    - list
- apiGroups:
    - ""
  resources:
    - "pods/exec"
  verbs:
    - "create"
    
---

apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  name: {{ meta.name }}-suricata-rb
  namespace: {{ meta.namespace }}
  labels:
    app: {{ meta.name }}-suricata-updater
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: {{ meta.name }}-suricata-role
subjects:
- kind: ServiceAccount
  name: {{ meta.name }}-suricata-sa
