apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ suricata.fullname }}
  namespace: {{ suricata.namespace }}
  labels: 
    app: {{ suricata.name  }}-updater
    
---

apiVersion: rbac.authorization.k8s.io/v1beta1
kind: Role
metadata:
  name: {{ suricata.fullname }}
  namespace: {{ suricata.namespace }}
  labels:
    app: {{ suricata.name }}-updater
rules:
- apiGroups:
    - ""
  resources:
    - pods
    - pods/log
  verbs:
    - get
    - list
- apiGroups:
    - ""
  resources:
    - "pods/exec"
  verbs:
    - "create"
    
---

apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  name: {{ suricata.fullname }}
  namespace: {{ suricata.namespace }}
  labels:
    app: {{ suricata.name }}-updater
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: {{  suricata.fullname }}
subjects:
- kind: ServiceAccount
  name: {{ suricata.fullname }}
